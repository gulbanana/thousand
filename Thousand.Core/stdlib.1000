class object [padding=15]
class point [shape=none, label=none]
class label [stroke=none, fill=none]

class line [anchor=none]

class group [shape=rect, stroke=none, label=none]
class row : group [grid-flow=columns]
class column : group [grid-flow=rows]; class col : column

// some useful defaults for a top-level group
class diagram : group [fill=white, grid=auto, padding=5, gutter=10, layout=equal]