@code {
    [Parameter] public string Source { get; set; }
    [Parameter] public EventCallback<string> SourceChanged { get; set; }

    private async void OnInput(ChangeEventArgs e)
    {
        await SourceChanged.InvokeAsync(e.Value.ToString());
    }
}

<textarea @oninput="OnInput" spellcheck="false">
    @Source
</textarea>