class named($x):object [min-width=150, font-size=16, margin=10, fill=#ccc, stroke=2, shape=$x, label=$x]

column [justify=center,padding=2] {
	label "Catalogue of shapes" [font-size=32]

	group [justify=center, grid=5 columns] {	
		column { named(oval); named(ellipse) }
		named(circle)
		column { named(roundrect); named(roundrectangle) }
		named(roundsquare)
		column { named(pill); named(octagon) }
	
		column { named(rect); named(rectangle) }
		named(square)
		column { named(trapezium); named(trapezoid) }
		named(diamond)
		column { named(rhombus); named(triangle) }
	}
}