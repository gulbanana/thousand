padding=20;fill=red

class box [shape=rect, min-width=100, min-height=100,stroke=1,fill=white]
class line [stroke=1]

row [gutter=10,scale=2,fill=white] {
    box a
    box b

    line a--b [anchor=ne nw]
}

line a--b [anchor=se sw]

group [pos=50 250] {
    box x [pos=000 000]
    box z [pos=400 000]
    line x--z [anchor=ne none]
}

group [pos=250 250] {
    box y 
}

line x--z [anchor=none sw]