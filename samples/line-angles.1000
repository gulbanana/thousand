scale = 2.0
gutter = 40

class node [fill=#ccc,shape=circle]
class thin : node [stroke=hairline]
class dash [stroke=dashed]

thin A 
thin.dash B
node.dash C
thin D [row=2]
node E 
node F

// hairlines
a-> b [stroke=dashed hairline] 
a-> e [stroke=hairline]
a-> d [stroke=hairline]

// scaling lines
b-> c [stroke=dashed 1]
b-> e [stroke=1]
b-> f [stroke=1]